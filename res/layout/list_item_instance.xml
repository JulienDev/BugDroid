<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/instances_background_instance"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp" >

    <TextView
        android:id="@+id/instanceName"
        style="@style/InstancesTextfieldInstanceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instance Name" />

    <TextView
        android:id="@+id/instanceUrl"
        style="@style/InstancesTextfieldInstanceUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/instanceName"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:text="http://instance_url" />

    <TextView
        android:id="@+id/accountsText"
        style="@style/InstancesTextfieldAccounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/instanceUrl"
        android:layout_below="@+id/instanceUrl"
        android:layout_marginTop="24dp"
        android:textSize="16sp"
        android:text="Accounts" />

    <View
        android:id="@+id/accountsSeparator"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_alignLeft="@+id/accountsText"
        android:layout_below="@+id/accountsText"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:background="#272e3e" />

    <LinearLayout
        android:id="@+id/accountsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/accountsSeparator"
        android:layout_below="@+id/accountsSeparator"
        android:orientation="vertical" >

        <include
            android:id="@+id/withoutAccount"
            layout="@layout/list_item_account" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/instanceMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/instanceName"
        android:layout_alignRight="@+id/accountsSeparator"
        android:layout_alignTop="@+id/instanceName"
        android:background="@null"
        android:src="@drawable/instance_overflow_menu" />

</RelativeLayout>